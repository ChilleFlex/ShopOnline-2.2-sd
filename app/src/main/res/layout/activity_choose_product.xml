<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseProductActivity">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/chooseProductText"
        android:text="Choose Your Product"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/tshirtCatagory"
        android:layout_below="@+id/chooseProductText"
        android:src="@drawable/tshirts"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/watchesCatagory"
        android:layout_below="@+id/chooseProductText"
        android:layout_toRightOf="@+id/tshirtCatagory"
        android:src="@drawable/watches"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/shoesCatagory"
        android:layout_below="@+id/chooseProductText"
        android:layout_toRightOf="@+id/watchesCatagory"
        android:src="@drawable/shoess"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/female_dressesCatagory"
        android:layout_below="@+id/tshirtCatagory"
        android:src="@drawable/female_dresses"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/laptopsCatagory"
        android:layout_below="@+id/watchesCatagory"
        android:layout_toRightOf="@+id/female_dressesCatagory"
        android:src="@drawable/laptops"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/glassesCatagory"
        android:layout_below="@+id/shoesCatagory"
        android:layout_toRightOf="@+id/laptopsCatagory"
        android:src="@drawable/glasses"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />

</RelativeLayout>