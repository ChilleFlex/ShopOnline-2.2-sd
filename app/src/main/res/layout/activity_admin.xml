<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E51839C"
    tools:context=".AdminActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/chooseProductText"
        android:text="Add Product"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/tshirts"
        android:layout_below="@+id/chooseProductText"
        android:src="@drawable/tshirts"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/watches"
        android:layout_below="@+id/chooseProductText"
        android:layout_toRightOf="@+id/tshirts"
        android:src="@drawable/watches"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/shoes"
        android:layout_below="@+id/chooseProductText"
        android:layout_toRightOf="@+id/watches"
        android:src="@drawable/shoess"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/female_dresses"
        android:layout_below="@+id/tshirts"
        android:src="@drawable/female_dresses"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/laptops"
        android:layout_below="@+id/watches"
        android:layout_toRightOf="@+id/female_dresses"
        android:src="@drawable/laptops"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/glasses"
        android:layout_below="@+id/shoes"
        android:layout_toRightOf="@+id/laptops"
        android:src="@drawable/glasses"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />

</RelativeLayout>